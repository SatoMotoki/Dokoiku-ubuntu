<div class="events-index-wrapper py-5 bg-light">
  <div class="container">
    <h2 class="main-h2 mb-2">イベント管理</h2>
    <% wd = ["日", "月", "火", "水", "木", "金", "土"] %>

    <% @events.each do |event| %>
      <div class="row manage-event-list mx-0">
        <div class="col-2 col-lg-1 manage-event-schedule-area">
          <p class="year">
            <%= event.start_date.year %>
          </p>
          <p class="date">
            <%= "#{event.start_date.mon}/#{event.start_date.day}" %>
          </p>
          <p class="time">
            <%= "#{event.start_date.strftime("(#{wd[event.start_date.wday]})")}#{event.start_time.hour}:#{event.start_time.strftime("%d")}〜" %>
          </p>
        </div>
        <div class="pl-3">
          <%= image_tag event.image.url, class: 'manage-event-image', alt: 'イベント画像'%>
        </div>
        <div class="col-4 col-md-6 col-lg-5">
          <p class="manage-event-title">
            <%= link_to event.title, "/events/#{event.id}" %>
          </p>
          <p class="fa fa-map-marker text-muted manage-event-adress pb-0">
            <%= event.address %>
          </p>
        </div>
        <div class="col-1 offset-lg-3 col-lg-1 pl-0 manage-btn">
          <%= link_to edit_event_path(event.id) do %>
            <button class="btn btn-sm mt-2" type="submit">編集する</button>
          <% end %>

          <!-- 切り替えボタンの設定 -->
          <button type="button" class="btn btn-sm mt-3" data-toggle="modal" data-target="#myModal">
            削除する
          </button>

          <!-- モーダルの設定 -->
          <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    <%= event.title %>
                  </h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="閉じる">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <p>このイベントを削除しますか？</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
                  <%= link_to event_path(event.id), {method: "delete"} do%>
                    <button type="button" class="btn">削除する</button>
                  <% end %>
                </div><!-- /.modal-footer -->
              </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
          </div><!-- /.modal -->

        </div>
      </div>
    <% end %>

  </div>
</div>
