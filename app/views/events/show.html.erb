<% wd = ["日", "月", "火", "水", "木", "金", "土"] %>
<div class="py-5 bg-light">
  <div class="container">

    <h2 class="main-h2 mb-4">
      <%= @event.title %>
    </h2>
    <div class="row border-bottom border-secondary">
      <div class="col-md-6">

        <%= image_tag @event.image.url, class: 'card-img-top', alt: 'イベント画像'%>
      </div>
      <div class="col-md-6">
        <h5>イベント説明</h5>
        <p>
          <%= @event.description %>
        </p>
        <h5> <概要> </h5>
        <p>
          <%= "日付：#{@event.start_date.strftime("%Y/%-m/ %d")} ~ #{@event.end_date.strftime("%Y/%-m/%d")}" %>
        </p>
        <p>
          <%= "時間：#{@event.start_time.strftime("%H:%M")} ~ #{@event.end_time.strftime("%H:%M")}" %>
        </p>
        <p>
          <%= "会場：#{@event.venue}" %>
        </p>
        <p>
          <%= "住所：#{@event.address}" %>
        </p>
        <p>
          <%= "入場料：#{@event.admission_fee}円" %>
        </p>
        <p>
          <%= "イベント投稿者：#{@event.user.username}" %>
        </p>
      </div>
    </div>

    <div class="comment-area pb-2 mb-3">
      <h6 class="comments-title mt-3">コメント</h6>


      <%= form_for [@event, @comment] do |f| %>
        <%= f.text_area :text, class: "comment-input-text rounded border border-secondary" %>
        <div class="comment-btn mt-2">
          <%= f.submit "投稿する", class: "btn btn-sm"%>
        </div>
      <% end %>
    </div>

    <% @event.comments.each do |comment| %>
      <p class="comment-text mb-1">
        <%= "#{comment.user.username} : #{comment.text}" %>
      </p>
    <% end %>

  </div>
</div>
