<div class="main">
  <div class="container">

    <h2 class="main_h2">
      <%= @event.title %>
    </h2>
    <div class="row event_info_area">
      <div class="col-md-6">

        <%= image_tag @event.image.url, class: 'card-img-top', alt: 'イベント画像'%>
      </div>
      <div class="col-md-6">
        <h5>イベント説明</h5>
        <p>
          <%= @event.description %>
        </p>
        <h5> <概要> </h5>
        <p>
          <%= "日付：#{@event.start_date.strftime("%Y/%-m/ %d")} ~ #{@event.end_date.strftime("%Y/%-m/%d")}" %>
        </p>
        <p>
          <%= "時間：#{@event.start_time.strftime("%H:%M")} ~ #{@event.end_time.strftime("%H:%M")}" %>
        </p>
        <p>
          <%= "会場：#{@event.venue}" %>
        </p>
        <p>
          <%= "住所：#{@event.address}" %>
        </p>
        <p>
          <%= "入場料：#{@event.admission_fee}円" %>
        </p>
        <p>
          <%= "イベント投稿者：#{@event.user.username}" %>
        </p>
      </div>
    </div>

    <div class="comment_area">
      <h6 class="comment_head">コメント</h6>
      <%= form_for [@event, @comment] do |f| %>
        <% if user_signed_in? %>
          <%= f.text_area :text, class: "comment_list" %>
          <div class="btn_right">
            <%= f.submit "投稿する", class: "btn btn_comment"%>
          </div>
        <% end %>
      <% end %>
    </div>

    <% @event.comments.each do |comment| %>
      <p class="comment_text">
        <%= "#{comment.user.username} : #{comment.text}" %>
      </p>
    <% end %>

  </div>
</div>
